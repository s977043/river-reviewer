{
  "name": "river-reviewer",
  "version": "0.1.1",
  "private": true,
  "description": "River Reviewer docs, schemas, and validation utilities.",
  "license": "Apache-2.0",
  "engines": {
    "node": "20.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/s977043/river-reviewer.git"
  },
  "bin": {
    "river": "./src/cli.mjs",
    "river-reviewer": "./src/cli.mjs"
  },
  "homepage": "https://s977043.github.io/river-reviewer/",
  "bugs": "https://github.com/s977043/river-reviewer/issues",
  "scripts": {
    "dev": "docusaurus start",
    "build": "docusaurus build",
    "serve": "docusaurus serve",
    "test": "node --test",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules",
    "lint:text": "textlint 'pages/**/*.md'",
    "check:dashes": "node scripts/fix-dashes.mjs --check",
    "lint": "npm run format:check && npm run check:dashes && npm run lint:md && npm run lint:text",
    "format": "prettier --write \"**/*.{js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,yml,yaml}\"",
    "agents:validate": "node scripts/validate-agents.mjs",
    "skills:validate": "node scripts/validate-skills.mjs",
    "agent-skills:validate": "node scripts/validate-agent-skills.mjs",
    "skills:catalog": "node scripts/generate-skill-catalog.mjs",
    "dashboard:generate": "node scripts/generate-dashboard-data.js",
    "trace:validate": "OTEL_ENABLED=1 OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318 node scripts/validate-agents.mjs",
    "fix:dashes": "node scripts/fix-dashes.mjs",
    "planner:eval": "node scripts/evaluate-planner.mjs",
    "planner:eval:dataset": "node scripts/evaluate-planner-dataset.mjs",
    "eval:fixtures": "node scripts/evaluate-review-fixtures.mjs",
    "river": "node ./src/cli.mjs",
    "prepare": "husky install"
  },
  "dependencies": {
    "@docusaurus/core": "^3.5.0",
    "@docusaurus/preset-classic": "^3.5.0",
    "@docusaurus/theme-mermaid": "^3.9.2",
    "@google/generative-ai": "^0.24.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.3",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "date-fns": "^4.1.0",
    "js-yaml": "^4.1.1",
    "minimatch": "^10.1.1",
    "openai": "^6.15.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "^3.6.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "husky": "^9.1.7",
    "linkinator": "^7.5.1",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.7.4",
    "prh": "^5.4.4",
    "textlint": "^15.5.0",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "textlint-rule-prh": "^6.1.0"
  }
}
